{
    "name": "reminders-menu-bar",
    "productName": "reminders-menu-bar",
    "version": "0.0.5",
    "description": "Reminders in your menubar.",
    "repository": "briangonzalez/reminders-menu-bar",
    "main": "src/index.js",
    "bin": {
        "reminders-menu-bar": "./scripts/open-app.sh"
    },
    "scripts": {
        "start": "electron-forge start",
        "_package": "electron-forge package",
        "_make": "electron-forge make",
        "_publish": "electron-forge publish",
        "lint": "eslint src --color",
        "postinstall": "if command -v osascript; then osascript scripts/add-to-login-items.applescript; fi"
    },
    "keywords": [],
    "author": "bgonzalez",
    "license": "MIT",
    "build": {
        "extraResources": [
            "./bin/**"
        ]
    },
    "config": {
        "forge": {
            "make_targets": {
                "win32": [
                    "squirrel"
                ],
                "darwin": [
                    "zip"
                ],
                "linux": [
                    "deb",
                    "rpm"
                ]
            },
            "electronPackagerConfig": {
                "packageManager": "yarn",
                "icon": "src/app-icon.icns"
            },
            "electronWinstallerConfig": {
                "name": "reminders_menu_bar"
            },
            "electronInstallerDebian": {},
            "electronInstallerRedhat": {},
            "github_repository": {
                "owner": "",
                "name": ""
            },
            "windowsStoreConfig": {
                "packageName": "",
                "name": "remindersmenubar"
            }
        }
    },
    "dependencies": {
        "applescript": "^1.0.0",
        "child-process-promise": "^2.2.1",
        "electron-compile": "^6.4.2",
        "electron-osx-sign": "^0.4.7",
        "electron-squirrel-startup": "^1.0.0",
        "run-node": "^0.1.1"
    },
    "devDependencies": {
        "babel-plugin-transform-async-to-generator": "^6.24.1",
        "babel-preset-env": "^1.6.1",
        "babel-preset-react": "^6.24.1",
        "electron-forge": "^4.1.3",
        "electron-prebuilt-compile": "1.7.9",
        "eslint": "^3",
        "eslint-config-standard": "^10.2.1",
        "eslint-plugin-import": "^2.8.0",
        "eslint-plugin-jsx-a11y": "^5",
        "eslint-plugin-node": "^5.2.1",
        "eslint-plugin-promise": "^3.6.0",
        "eslint-plugin-react": "^7",
        "eslint-plugin-standard": "^3.0.1"
    }
}
